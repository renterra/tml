{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2018",
    "module": "esnext",
    "rootDir": "./src",
    "outDir": "./build/compiled",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                          
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "lib": ["es2017"]

  },
  "include": [    
    "src",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
